<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.HomeActivity"
    android:background="@color/colorPrimaryDark">

    <include layout="@layout/toolbar"/>

    <FrameLayout
        android:id="@+id/progressLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ProgressBar
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            />
    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/textColorPrimaryLight"
        android:layout_marginTop="5dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="5dp"/>


    <android.support.design.widget.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:padding="8dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="50dp"/>

        <!--<RelativeLayout-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:background="@color/colorSecondary"-->
            <!--android:paddingRight="20dp"-->
            <!--android:paddingLeft="20dp">-->

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="50dp"
            >

            <LinearLayout
                android:id="@+id/orderOverviewLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="220dp"
                android:background="@color/colorAccent"
                android:orientation="vertical"
                android:layout_alignParentBottom="true"
                android:paddingRight="20dp"
                android:paddingLeft="20dp"
                android:visibility="invisible"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:text="F&amp;B Summary"
                    android:textAllCaps="true"
                    android:textColor="@color/textColorSecondary"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rvOrderOverview"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    />

            </LinearLayout>
        </FrameLayout>

            <LinearLayout
                android:id="@+id/checkoutLayout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_alignParentBottom="true"
                android:background="@color/colorAccent"
                android:paddingRight="20dp"
                android:paddingLeft="20dp">

                <TextView
                    android:id="@+id/total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:text="AED 8.80"
                    android:textAllCaps="true"
                    android:textColor="@color/textColorSecondary"
                    android:textSize="16sp"
                    android:layout_gravity="start|left|center_vertical"/>
                
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/ic_arrow"
                    android:tint="@color/colorPrimary"
                    android:layout_gravity="start|left|center_vertical"/>


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:layout_margin="2dp"
                    android:text="Pay"
                    android:textAllCaps="true"
                    android:textColor="@color/textColorSecondary"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_gravity="end|right|center_vertical"/>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_arrow"
                    android:tint="@color/colorPrimary"
                    android:layout_gravity="end|right|center_vertical"/>
            </LinearLayout>

        <!--</RelativeLayout>-->
    </RelativeLayout>
</LinearLayout>